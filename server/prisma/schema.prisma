generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("MYSQL_URL")
}

model users {
  // one to many relationship
  id Int @id @default(autoincrement())

  parentId  Int
  FirstName String @db.VarChar(45)
  LastName  String @db.VarChar(45)
  email     String @unique(map: "email_UNIQUE") @db.VarChar(100)
  Password  String @db.VarChar(255)

  stats  stats[]
  parent parents @relation(fields: [parentId], references: [id])
}

model stats {
  id           Int       @id @default(autoincrement())
  userId       Int
  hours        Int
  timestamp    DateTime? @default(now()) @db.Timestamp(0)
  vehicle_type String    @db.VarChar(45)
  day          Boolean
  weather      String    @db.VarChar(45)
  from         String    @db.VarChar(45)
  to           String    @db.VarChar(45)
  practiced    String    @db.VarChar(45)
  user         users     @relation(fields: [userId], references: [id])
  // referenced users' id

  @@index([parentId], map: "users_parentId_fkey")
}

model parents {
  id        Int    @id @default(autoincrement())
  FirstName String @db.VarChar(45)
  LastName  String @db.VarChar(45)
  email     String @unique(map: "email_UNIQUE") @db.VarChar(100)
  Password  String @db.VarChar(255)
}

model parents {
  id           Int     @id @default(autoincrement())
  FirstName    String  @db.VarChar(45)
  LastName     String  @db.VarChar(45)
  email        String  @unique(map: "email_UNIQUE") @db.VarChar(100)
  Password     String  @db.VarChar(255)
  ManagedUsers users[]
}
